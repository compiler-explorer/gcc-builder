---
 gcc/cobol/Make-lang.in | 3 +--
 1 file changed, 1 insertion(+), 2 deletions(-)

diff --git a/gcc/cobol/Make-lang.in b/gcc/cobol/Make-lang.in
index 241385a1d73..6a36125f7c0 100644
--- a/gcc/cobol/Make-lang.in
+++ b/gcc/cobol/Make-lang.in
@@ -184,8 +184,7 @@ cobol.install-man: installdirs
 	@echo prefix = $(prefix)
 	@echo srcdir = $(srcdir)
 	@echo installing gcobol.1 from $(srcdir)/cobol/gcobol.1
-	$(INSTALL_PROGRAM) -D -m644 $(srcdir)/cobol/gcobol.1 \
-				    $(prefix)/man/man1/gcobol.1
